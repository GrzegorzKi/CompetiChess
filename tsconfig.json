{
  "compilerOptions": {
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": "src",
    "paths": {
      "@/*": ["components/*"],
      "#/*": ["backend/*"],
      "routes/*": ["routes/*"],
      "hooks/*": ["hooks/*"],
      "reducers/*": ["reducers/*"]
    },

    "allowJs": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",

    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,

    "isolatedModules": true,

    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/types.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "test/**/*"
  ]
}
